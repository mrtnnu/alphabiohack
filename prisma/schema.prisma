generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  supabaseId        String     @unique
  firstname         String
  lastname          String
  avatar            String?
  role              UserRole[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  patientBookings   Booking[]  @relation("PatientBookings")
  therapistBookings Booking[]  @relation("TherapistBookings")

  @@map("users")
}

model Location {
  id            String          @id @default(cuid())
  address       String
  logo          String?
  title         String
  description   String?
  lat           Float?
  lon           Float?
  timezone      String          @default("America/Los_Angeles")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  bookings      Booking[]
  businessHours BusinessHours[]
  overrides     DateOverride[]

  @@map("locations")
}

model BusinessHours {
  id         String     @id @default(cuid())
  dayOfWeek  DaysOfWeek
  locationId String
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  location   Location   @relation(fields: [locationId], references: [id], onDelete: Cascade)
  timeSlots  TimeSlot[]

  @@unique([locationId, dayOfWeek])
  @@map("business_hours")
}

model TimeSlot {
  id              String        @id @default(cuid())
  startTime       String
  endTime         String
  isActive        Boolean       @default(true)
  businessHoursId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  businessHours   BusinessHours @relation(fields: [businessHoursId], references: [id], onDelete: Cascade)

  @@unique([businessHoursId, startTime, endTime])
  @@map("time_slots")
}

model DateOverride {
  id         String             @id @default(cuid())
  locationId String
  startDate  DateTime
  endDate    DateTime
  isClosed   Boolean            @default(true)
  reason     String?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  location   Location           @relation(fields: [locationId], references: [id], onDelete: Cascade)
  timeSlots  OverrideTimeSlot[]

  @@index([locationId, startDate, endDate])
  @@map("date_overrides")
}

model OverrideTimeSlot {
  id             String       @id @default(cuid())
  startTime      String
  endTime        String
  isActive       Boolean      @default(true)
  dateOverrideId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  dateOverride   DateOverride @relation(fields: [dateOverrideId], references: [id], onDelete: Cascade)

  @@unique([dateOverrideId, startTime, endTime])
  @@map("override_time_slots")
}

model Specialty {
  id          String    @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
  services    Service[]

  @@map("specialties")
}

model Service {
  id          String    @id @default(cuid())
  description String
  cost        Float
  duration    Int
  specialtyId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
  specialty   Specialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade)

  @@map("services")
}

model Booking {
  id              String        @id @default(cuid())
  bookingType     BookingType
  locationId      String
  specialtyId     String?
  serviceId       String?
  firstname       String
  lastname        String
  phone           String
  email           String
  givenConsent    Boolean       @default(false)
  therapistId     String?
  patientId       String?
  bookingNotes    String?
  bookingSchedule DateTime
  status          BookingStatus @default(Pending)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  location        Location      @relation(fields: [locationId], references: [id])
  patient         User?         @relation("PatientBookings", fields: [patientId], references: [id])
  service         Service?      @relation(fields: [serviceId], references: [id])
  specialty       Specialty?    @relation(fields: [specialtyId], references: [id])
  therapist       User?         @relation("TherapistBookings", fields: [therapistId], references: [id])

  @@index([therapistId, bookingSchedule])
  @@index([patientId, bookingSchedule])
  @@index([status, bookingSchedule])
  @@map("bookings")
}

enum BookingType {
  DirectVisit
  VideoCall
  PhoneCall
  HomeVisit
}

enum DaysOfWeek {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

enum UserRole {
  Therapist
  Admin
  Patient
}

enum BookingStatus {
  Pending
  Confirmed
  InProgress
  Completed
  Cancelled
  NoShow
}
